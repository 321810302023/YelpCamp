<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
                <div class="form-group mb-2">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="campground[name]" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <!-- <div>
                    <input type="file" name="image" id="" multiple>
                </div> -->
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose file(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
                <!-- <div class="form-group mb-2">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" placeholder="image URL"
                        required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div> -->
                <div class="col-auto">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <div class="input-group-text">$</div>
                        <input type="number" step="0.01" class="form-control" id="price" name="campground[price]"
                            placeholder="0.00" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label class="form-label" for="discription">Description</label>
                    <textarea class="form-control" type="text" id="discription" name="campground[discription]"
                        placeholder="Give us a review about your camping" required>
                    </textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>

                <button class="btn btn-primary">Add Campground</button>
            </form>
            <a href="/campgrounds"><button class="btn btn-primary">Campground List</button></a>
        </div>
    </div>
    </form>